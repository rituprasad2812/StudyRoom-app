@model StudyRoom.Models.Room
@using Microsoft.AspNetCore.Identity
@using System.Text.Json
@inject UserManager<StudyRoom.Models.ApplicationUser> UserManager

@{
    var isMember = (bool)(ViewBag.IsMember ?? false);
    var isPrivate = Model.IsPrivate;
    var joinError = TempData["JoinError"] as string;
}

<!-- Hero -->
<div class="room-hero mb-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
        <div>
            <h2 class="room-title mb-1">@Model.Name</h2>
            <div class="d-flex align-items-center gap-2"> @if (!string.IsNullOrWhiteSpace(Model.Subject)) {
            <span
                    class="chip"><i class="bi bi-book me-1"></i>@Model.Subject</span>
                        }
 @if (Model.IsPrivate)
{
                        <span
                        class="chip"><i class="bi bi-lock-fill me-1"></i>Private</span>
                    }
                    else
                    {

                        <span class="chip"><i
                            class="bi bi-globe2 me-1"></i>Public</span>
                    }
 </div>
        </div>
        @if (!isMember)
        {
            if (isPrivate)
            {
                <form asp-action="Join" method="post" class="mt-3 mt-md-0">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="input-group input-group-sm" style="max-width: 360px;">
                        <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                        <input name="code" class="form-control" placeholder="Enter join code" maxlength="32" required />
                        <button class="btn btn-success" type="submit">Join</button>
                    </div>
                    @if (!string.IsNullOrEmpty(joinError))
                    {
                        <div class="text-danger small mt-1 text-md-end">@joinError</div>
                    }
                </form>
            }
            else
            {
                <form asp-action="Join" method="post" class="mt-3 mt-md-0">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button class="btn btn-success btn-sm" type="submit"><i class="bi bi-person-plus-fill me-1"></i>Join
                        Room</button>
                </form>
            }
        }
    </div>
</div><!-- Tabs (desktop and mobile) -->
<ul id="roomTabs" class="nav nav-pills sticky-top mb-2" style="top: 60px; backdrop-filter: blur(6px);">
    <li class="nav-item"> <button class="nav-link active d-flex align-items-center gap-1" data-section="chat"
            type="button"> <i class="bi bi-chat-dots"></i> Chat <span id="tab-badge-chat"
                class="badge rounded-pill bg-danger d-none">0</span> </button> </li>
    <li class="nav-item"> <button class="nav-link d-flex align-items-center gap-1" data-section="tasks" type="button">
            <i class="bi bi-kanban"></i> Tasks <span id="tab-badge-tasks"
                class="badge rounded-pill bg-secondary d-none">0</span> </button> </li>
    <li class="nav-item"> <button class="nav-link d-flex align-items-center gap-1" data-section="polls" type="button">
            <i class="bi bi-bar-chart-steps"></i> Polls <span id="tab-badge-polls"
                class="badge rounded-pill bg-secondary d-none">0</span> </button> </li>
    <li class="nav-item"> <button class="nav-link d-flex align-items-center gap-1" data-section="timer" type="button">
            <i class="bi bi-alarm"></i> Timer <span id="tab-dot-timer" class="badge rounded-pill bg-success d-none"
                title="Running">‚óè</span> <span id="tab-badge-timer"
                class="badge rounded-pill bg-dark-subtle text-dark-emphasis d-none">00:00</span> </button> </li>
</ul><!-- Quick glance strip -->
<div id="roomGlance" class="d-flex flex-wrap gap-3 small text-muted mb-3">
    <div id="glance-online"><i class="bi bi-people me-1"></i>Online: <strong>0</strong></div>
    <div id="glance-tasks"><i class="bi bi-list-check me-1"></i>Open tasks: <strong>0</strong></div>
    <div id="glance-overdue" class="text-danger"><i class="bi bi-exclamation-triangle me-1"></i>Overdue:
        <strong>0</strong></div>
    <div id="glance-polls"><i class="bi bi-graph-up-arrow me-1"></i>Active polls: <strong>0</strong></div>
    <div id="glance-timer"><i class="bi bi-stopwatch me-1"></i>Timer: <strong>stopped</strong></div>
</div><!-- Sections --><!-- Chat -->
<div id="section-chat"> @if (isMember) {
<div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center"> <span><i
                    class="bi bi-chat-dots icon"></i>Chat</span> <button id="loadMore"
                class="btn btn-sm btn-outline-secondary" type="button">Load earlier</button> </div>
        <div class="card-body" id="chatMessages" style="height: 350px; overflow-y:auto;"></div>
        <div class="card-footer d-flex gap-2"> <input id="messageInput" class="form-control"
                placeholder="Type a message..." /> <button id="sendBtn" class="btn btn-primary"
                type="button">Send</button> </div>
    </div>
<small id="onlineUsers" class="text-muted"></small>
  } else
{
        <div class="alert alert-light border">Join the
            room to view chat.</div>
    }
 </div><!-- Timer -->
<div id="section-timer" class="d-none"> @if (isMember) {
<div class="card mb-3">
        <div class="card-header"><i class="bi bi-alarm icon"></i>Pomodoro Timer</div>
        <div class="card-body text-center">
            <div class="btn-group mb-3" role="group"> <input type="radio" class="btn-check" name="phase" id="phaseFocus"
                    value="focus" checked /> <label class="btn btn-outline-primary" for="phaseFocus">Focus</label>
                <input type="radio" class="btn-check" name="phase" id="phaseBreak" value="break" /> <label
                    class="btn btn-outline-secondary" for="phaseBreak">Break</label> </div>
            <div class="mb-2">
                <input type="number" id="minutesInput" class="form-control text-center" value="25" min="1" max="120" />
            </div>

            <h1 id="timerDisplay" class="display-5 my-3">25:00</h1>

            <div class="d-flex justify-content-center gap-2">
                <button id="startBtn" class="btn btn-success" type="button">Start</button>
                <button id="pauseBtn" class="btn btn-warning" type="button">Pause</button>
                <button id="resumeBtn" class="btn btn-info" type="button">Resume</button>
            </div>

            <div class="mt-3">
                <span class="badge bg-primary" id="phaseBadge">focus</span>
                <span class="badge bg-secondary" id="statusBadge">stopped</span>
            </div>
        </div>
    </div>
} else
{

        <div class="alert alert-light border">Join the room to control the timer.</div>
    }
 </div>
<!-- Tasks -->
<div id="section-tasks" class="d-none">
    <div class="card mb-3">
        <div class="card-header"><i class="bi bi-kanban icon"></i>Tasks</div>
        <div class="card-body">
            <form id="taskAddForm" class="row g-2 align-items-end mb-3" onsubmit="return false;">
                <div class="col-md-7"> <label class="form-label mb-1">Title</label> <input id="taskTitle"
                        class="form-control" maxlength="160" placeholder="Add a task..." /> </div>
                <div class="col-md-3"> <label class="form-label mb-1">Due</label> <input id="taskDue" type="date"
                        class="form-control" /> </div>
                <div class="col-md-2"> <label class="form-label d-none d-md-block">&nbsp;</label> <button
                        id="taskAddBtn" type="button" class="btn btn-primary w-100">Add</button> </div>
            </form>
            <div class="row g-3">
                <div class="col-md-4">
                    <h6 class="text-muted mb-2">To Do</h6>
                    <div id="taskList-todo" class="vstack gap-2"></div>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted mb-2">Doing</h6>
                    <div id="taskList-doing" class="vstack gap-2"></div>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted mb-2">Done</h6>
                    <div id="taskList-done" class="vstack gap-2"></div>
                </div>
            </div>
        </div>
    </div>
</div><!-- Polls -->
<div id="section-polls" class="d-none">
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between align-items-center"> <span><i
                    class="bi bi-bar-chart-steps icon"></i>Polls</span> @if (isMember) {
                    <button type="button"
                class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#createPollModal"> <i
                    class="bi bi-plus-lg me-1"></i>New poll </button>
                                        } else
                    {

                        <span class="small text-muted">Join the
                    room to create polls</span>
                    }
 </div>
        <div class="card-body">
            <div id="pollsList" class="vstack gap-3"></div>
        </div>
    </div>
</div><!-- Create Poll Modal -->
<div class="modal fade" id="createPollModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create poll</h5> <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3"> <label class="form-label">Question</label> <input id="pollQ" class="form-control"
                        maxlength="200" placeholder="Type your question..." /> </div>
                <div class="row g-2">
                    <div class="col-12 col-md-6"> <label class="form-label">Option 1</label> <input id="pollO1"
                            class="form-control" maxlength="120" /> </div>
                    <div class="col-12 col-md-6"> <label class="form-label">Option 2</label> <input id="pollO2"
                            class="form-control" maxlength="120" /> </div>
                    <div class="col-12 col-md-6"> <label class="form-label">Option 3</label> <input id="pollO3"
                            class="form-control" maxlength="120" /> </div>
                    <div class="col-12 col-md-6"> <label class="form-label">Option 4</label> <input id="pollO4"
                            class="form-control" maxlength="120" /> </div>
                    <div class="col-12 col-md-6"> <label class="form-label">Option 5</label> <input id="pollO5"
                            class="form-control" maxlength="120" /> </div>
                </div>
                <div class="form-text mt-2">At least 2 options. Polls auto-close in 3 days.</div>
            </div>
            <div class="modal-footer"> <button class="btn btn-secondary" data-bs-dismiss="modal"
                    type="button">Cancel</button> <button class="btn btn-primary" type="button"
                    onclick="window.createPoll && window.createPoll()">Create</button> </div>
        </div>
    </div>
</div>
@section Scripts {

    <script> window.StudyRoom = { isMember: @((bool)(ViewBag.IsMember ?? false) ? "true" : "false"), roomId: '@Model.Id', ownerId: '@Model.OwnerId', userId: '@UserManager.GetUserId(User)', history: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.History ?? new List<object>())) }; </script>
    <script src="~/js/room-details.js" asp-append-version="true"></script>
    <script src="~/js/room-tasks.js" asp-append-version="true"></script>
    <script src="~/js/room-polls.js" asp-append-version="true"></script>
    <script src="~/js/room-ui.js" asp-append-version="true"></script>
}