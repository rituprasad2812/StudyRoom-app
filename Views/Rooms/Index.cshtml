@model IEnumerable<StudyRoom.Models.Room>
@{
    ViewData["Title"] = "Rooms";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Rooms</h2> <a class="btn btn-primary" href="@Url.Action("Create")">Create Room</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Private</th>
            <th></th>
        </tr>
    </thead>
    <tbody> @foreach (var r in Model) {
    <tr>
            <td>@r.Name</td>
            <td>@r.Subject</td>
            <td>@(r.IsPrivate ? "Yes" : "No")</td>
            <td><a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details", new { id = r.Id })">Open</a></td>
        </tr>
        }
 </tbody>
</table>